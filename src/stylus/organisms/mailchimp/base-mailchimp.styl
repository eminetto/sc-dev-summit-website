.mailchimp-container
  background: $colorGreenSemiDark
  margin-top: 70px
  padding: 70px 0
  text-align: center

.mailchimp-title
  rem(font-size, 53)
  font-weight: 900
  text-transform: uppercase
  letter-spacing: -1px
  margin: 0

.mailchimp-excerpt
  rem(font-size, 18)
  max-width: 500px
  margin: 20px auto
  width: 100%

.form-field
  margin: auto
  padding: 20px 0
  width: 500px

.form-label
  rem(font-size, 18)
  display: block
  font-weight: 900
  text-align: left
  text-transform: uppercase

.input-text
  rem(font-size, 18)
  background: transparent
  border: 0
  border-bottom: 1px solid $colorBlueDark
  color: $colorBlueDark
  font-family: $fontExo
  padding: 8px 5px
  width: 100%

  &:focus
    color: $colorWhite
    border-color: $colorWhite
    outline: 0 none

.input-robot
  display: none
