.main-header-featured-image
  height: 420px
  position: relative
  top: -30px
  z-index: 0

  .layer
    bottom: 0
    left: 0
    margin: 0 auto
    position: absolute
    right: 0
    top: 0


.main-header-featured-image-title
  margin: 130px 0 0
  position: absolute
  text-shadow: 4px 4px 0 $colorGraySemiDark
  text-transform: uppercase
  z-index: 1
  width: 100%

  .word
    rem(font-size, 130)
    display: block
    font-weight: 900
    letter-spacing: -5px
    width: 100%

  .word.-odd
    position: relative
    text-align: right
    margin-top: -160px

  .e
    rem(font-size, 220)
    color: $colorWhite
    font-family: $fontTitillium
    font-weight: 200
